module Produit

  use import int.Int
  use import ref.Refint

  let produit (a b : int) : int
    requires { true (* A COMPLETER *) }
    ensures  { true (* A COMPLETER *) }
  =
    let i = ref b in
    let r = ref 0 in
    while  (0 < !i) do
      invariant { true (* A COMPLETER *) }
      variant   { 1 (* A COMPLETER *) }
      i := (!i) - 1;
      r := a + (!r) 
    done;
    !r
